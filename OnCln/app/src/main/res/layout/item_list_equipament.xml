<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="80dp"
    android:layout_gravity="top|center"
    android:layout_margin="20dp"

    android:orientation="horizontal"
    android:padding="@dimen/dimen_small_medium">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/caixa"
            android:layout_width="@dimen/dimen_extra_large"
            android:layout_height="@dimen/dimen_extra_large"
            android:layout_marginStart="@dimen/dimen_small"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/ic_air_conditioning" />

        <LinearLayout
            android:id="@+id/descricao_caixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_small"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/caixa"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/dimen_medium_large"
                    android:fontFamily="@font/readex_pro_medium"
                    android:textColor="@color/blue_secundary"
                    android:textSize="@dimen/dimen_small_medium_txt"
                    android:textStyle="bold"
                    tools:text="Ar condicionado 1" />

                <ImageView
                    android:layout_width="@dimen/dimen_medium_large"
                    android:layout_height="@dimen/dimen_medium_large"
                    android:layout_marginStart="@dimen/dimen_small"
                    android:background="@drawable/ic_power_black"
                    tools:backgroundTint="@color/black" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="@dimen/dimen_medium_large"
                android:fontFamily="@font/readex_pro_medium"
                android:textColor="@color/gray_secundary"
                android:textSize="@dimen/dimen_small_medium"
                tools:text="Sala de reuniões" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="@dimen/dimen_medium_large"
                android:fontFamily="@font/readex_pro_medium"
                android:textColor="@color/gray_secundary"
                android:textSize="@dimen/dimen_small_medium"
                tools:text="Andar: 2º" />

        </LinearLayout>

        <include
            android:id="@+id/botao_ligar_desligar"
            layout="@layout/item_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/editar_deletar_equipamento"
            layout="@layout/item_edit_delete" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>