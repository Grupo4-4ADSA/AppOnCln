<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/dimen_medium"
    app:cardElevation="@dimen/dimen_large"
    app:rippleColor="@color/black"
    app:strokeColor="@color/black"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:padding="@dimen/dimen_small">

        <ImageView
            android:layout_width="@dimen/dimen_extra_y_large"
            android:layout_height="@dimen/dimen_extra_y_large"
            android:paddingTop="@dimen/dimen_medium"
            android:src="@drawable/ic_air_conditioning" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_large"
            android:paddingVertical="@dimen/dimen_small">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="@dimen/dimen_medium_large"
                    android:fontFamily="@font/readex_pro_medium"
                    android:textColor="@color/blue_secundary"
                    android:textSize="@dimen/dimen_medium_txt"
                    android:textStyle="bold"
                    tools:text="Ar condicionado 1" />

                <ImageView
                    android:layout_width="@dimen/dimen_medium_large"
                    android:layout_height="@dimen/dimen_medium_large"
                    android:layout_marginStart="@dimen/dimen_small"
                    android:background="@drawable/ic_power_black"
                    tools:backgroundTint="@color/black" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="@dimen/dimen_medium_large"
                android:fontFamily="@font/readex_pro_medium"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_medium_txt"
                tools:text="Sala de reuniões"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="@dimen/dimen_medium_large"
                android:fontFamily="@font/readex_pro_medium"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_medium_txt"
                tools:text="Andar: 2º" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_large">

            <include
                android:id="@+id/botao_ligar_desligar"
                layout="@layout/item_switch" />

            <include
                android:id="@+id/editar_deletar_equipamento"
                layout="@layout/item_edit_delete" />
        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
