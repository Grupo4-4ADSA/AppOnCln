<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/blue_secondary"
    app:cardCornerRadius="@dimen/dimen_medium_16"
    app:cardElevation="@dimen/dimen_small_8"
    app:strokeWidth="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/dimen_large_50"
        android:gravity="center|start"
        android:orientation="vertical"
        android:padding="@dimen/dimen_small_12">

        <TextView
            android:id="@+id/txt_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/readex_pro_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_large_28_txt"
            tools:text="@string/text_confirm_delete" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_medium_16"
            android:gravity="center">

            <Button
                android:id="@+id/botao_cancelar"
                style="@style/Botao.edit_delet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium_16"
                android:backgroundTint="@color/white"
                android:paddingHorizontal="@dimen/dimen_large_40"
                android:paddingVertical="@dimen/dimen_small_12"
                android:text="@string/txt_btn_cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_medium_20" />

            <Button
                android:id="@+id/botao_excluir"
                style="@style/Botao.edit_delet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_medium_16"
                android:backgroundTint="@color/red_secondary"
                android:paddingHorizontal="@dimen/dimen_large_40"
                android:paddingVertical="@dimen/dimen_small_12"
                android:text="@string/txt_btn_delete"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_medium_20" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</com.google.android.material.card.MaterialCardView>