<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linear_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtHome"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_extra_large"
            android:fontFamily="@font/readex_pro_medium"
            android:text="Cadastrar sala"
            android:textColor="@color/cor_titulos"
            android:textSize="@dimen/dimen_large_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/linha_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_linha_menu"
            app:layout_constraintLeft_toLeftOf="@id/txtHome"
            app:layout_constraintRight_toRightOf="@+id/txtHome"
            app:layout_constraintTop_toBottomOf="@id/txtHome" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_megalodon"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_titulo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_extra_super_large"
            android:fontFamily="@font/readex_pro_medium"
            android:text="Nome:"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_large_txt" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/readex_pro_medium"
            android:hint="@string/txt_nome"
            android:textColor="@color/black"
            app:backgroundTint="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/readex_pro_medium"
            android:text="Andar:"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_medium_large_txt" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/readex_pro_medium"
            android:hint="@string/txt_nome"
            android:textColor="@color/black"
            app:backgroundTint="@color/gray" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cadastro_sala"
        android:layout_width="@dimen/dimen_extra_super_amazing_large"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_button_cadastro"
        android:fontFamily="@font/readex_pro_medium"
        android:text="Cadastrar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_large_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


