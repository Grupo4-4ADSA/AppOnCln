<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

   <com.google.android.material.switchmaterial.SwitchMaterial
       android:id="@+id/switch_mode"
       android:layout_width="wrap_content"
       android:layout_height="@dimen/dimen_small_12"
       android:backgroundTint="@color/blue_secondary"
       android:scaleX="1.0"
       android:textColorHint="@color/blue_secondary"
       android:textColorLink="@color/blue_secondary"
       app:thumbTint="@color/white"
       app:trackTint="@color/blue_secondary"
       app:useMaterialThemeColors="true" />

</LinearLayout >