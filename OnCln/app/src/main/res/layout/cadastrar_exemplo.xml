<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_medium"
        android:orientation="vertical">

        <include
            android:id="@+id/include_text"
            layout="@layout/item_text" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_extra_large"
            android:fontFamily="@font/readex_pro_medium"
            android:padding="0dp"
            android:text="@string/txt_nome"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_medium"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite nome da sala"
            android:inputType="textFilter"
            android:textColorHint="@color/gray_terciary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>
