<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/dimen_medium_16"
    app:cardElevation="@dimen/dimen_small_8"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:padding="@dimen/dimen_small_8">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_meeting_room"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_large_24"
            app:layout_constraintStart_toEndOf="@+id/img_icon"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/readex_pro_medium"
                    android:textColor="@color/blue_secundary"
                    android:textSize="@dimen/dimen_medium_16_txt"
                    android:textStyle="bold"
                    tools:text="@string/text_example_air_conditioning" />

                <ImageView
                    android:id="@+id/icon_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_small_8"
                    android:background="@drawable/ic_power_black"
                    tools:backgroundTint="@color/black" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/readex_pro_medium"
                android:textColor="@color/gray_terciary"
                android:textSize="@dimen/dimen_medium_16_txt"
                tools:text="@string/text_example_room" />

            <TextView
                android:id="@+id/txt_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/readex_pro_medium"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_medium_16_txt"
                tools:text="@string/text_example_floor" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/botao_ligar_desligar"
                layout="@layout/item_switch" />

            <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end">


                <ImageView
                    android:id="@+id/botao_editar"
                    android:layout_width="@dimen/dimen_medium_20"
                    android:layout_height="@dimen/dimen_medium_20"
                    android:layout_marginEnd="@dimen/dimen_small_8"
                    android:background="@drawable/ic_edit_delete" />

                <ImageView
                    android:id="@+id/botao_excluir"
                    android:layout_width="@dimen/dimen_medium_20"
                    android:layout_height="@dimen/dimen_medium_20"
                    android:background="@drawable/ic_delete" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>