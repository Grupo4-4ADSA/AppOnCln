<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_minimum"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layout_equipments"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_equipments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_minimum"
        app:layout_constraintStart_toEndOf="@+id/layout_home"
        app:layout_constraintEnd_toStartOf="@+id/layout_salas"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_equipments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_equipments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equipments"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_salas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_minimum"
        app:layout_constraintStart_toEndOf="@+id/layout_equipments"
        app:layout_constraintEnd_toStartOf="@+id/layout_agendar"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_salas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_salas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rooms"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_agendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_minimum"
        app:layout_constraintStart_toEndOf="@+id/layout_salas"
        app:layout_constraintEnd_toStartOf="@+id/layout_cadastrar"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_agendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_agendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toSchedule"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_minimum"
        app:layout_constraintStart_toEndOf="@+id/layout_agendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>