<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen_medium"
    tools:context=".MainActivity">

    <include
        android:id="@+id/include_text"
        layout="@layout/item_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_large"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/include_text">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/readex_pro_medium"
            android:paddingVertical="@dimen/dimen_small"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_medium_large_txt" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="@string/login"
                android:inputType="textEmailSubject" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/readex_pro_medium"
            android:paddingVertical="@dimen/dimen_small"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_medium_large_txt" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutAbc"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_secundary"
            app:boxStrokeWidth="0dp"

            >

            <AutoCompleteTextView
                android:id="@+id/inputAbc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:hint="@string/rooms"
                android:inputType="none"
                android:paddingVertical="@dimen/dimen_small_small" />


        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <include
        android:id="@+id/btn_blue"
        layout="@layout/btn_blue" />

</androidx.constraintlayout.widget.ConstraintLayout>


