<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="@dimen/dimen_medium"
    app:cardElevation="@dimen/dimen_small"
    app:rippleColor="@color/black"
    app:strokeColor="@color/black"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:padding="@dimen/dimen_small">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dimen_extra_y_large"
            android:layout_height="@dimen/dimen_extra_y_large"
            android:src="@drawable/ic_meeting_room"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layout_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_large"
            app:layout_constraintStart_toEndOf="@+id/img_icon"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/readex_pro_medium"
                    android:textColor="@color/blue_secundary"
                    android:textSize="@dimen/dimen_medium_txt"
                    android:textStyle="bold"
                    tools:text="Ar condicionado 1" />

                <ImageView
                    android:id="@+id/icon_power"
                    android:layout_width="@dimen/dimen_medium_large"
                    android:layout_height="@dimen/dimen_medium_large"
                    android:layout_marginStart="@dimen/dimen_small"
                    android:background="@drawable/ic_power_black"
                    tools:backgroundTint="@color/black" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/readex_pro_medium"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_medium_txt"
                tools:text="Andar: 2ยบ" />
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/botao_editar"
                android:layout_width="@dimen/dimen_extra_medium_large"
                android:layout_height="@dimen/dimen_extra_medium_large"
                android:layout_marginEnd="@dimen/dimen_small"
                android:background="@drawable/ic_edit_delete"/>

            <ImageView
                android:id="@+id/botao_excluir"
                android:layout_width="@dimen/dimen_extra_medium_large"
                android:layout_height="@dimen/dimen_extra_medium_large"
                android:background="@drawable/ic_delete"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
