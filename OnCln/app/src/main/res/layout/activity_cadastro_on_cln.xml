<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_small"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linear_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/include_text"
            layout="@layout/item_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimen_extra_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_titulo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_extra_super_large"
            android:textColor="@color/black"
            android:fontFamily="@font/readex_pro_medium"
            android:textSize="@dimen/dimen_medium_txt"
            android:text="@string/txt_room" />

        <Spinner
            android:id="@+id/sala_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_small"
            android:entries="@array/activity_cadastro_on_cln_spinner"
            android:fontFamily="@font/readex_pro_medium"
            android:foregroundTint="@color/black"
            android:spinnerMode="dropdown"
            app:backgroundTint="@color/gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:fontFamily="@font/readex_pro_medium"
            android:textSize="@dimen/dimen_medium_txt"
            android:text="@string/txt_qrcode" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/hint_qrcode"
            android:textSize="@dimen/dimen_medium_txt"
            android:drawableRight="@drawable/qr_code"
            app:backgroundTint="@color/gray"
            android:fontFamily="@font/readex_pro_medium"/>


    </LinearLayout>

    <include
        android:id="@+id/btn_blue"
        layout="@layout/btn_blue"/>


</androidx.constraintlayout.widget.ConstraintLayout>


