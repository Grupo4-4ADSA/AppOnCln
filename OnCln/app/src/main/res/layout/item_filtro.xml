<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_padrao_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/readex_pro_medium"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/botao_filtro_cadastrar"
            style="@style/Botao.item.lista"
            android:layout_width="@dimen/dimen_large_120"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_small_2"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_small_12_txt"
            tools:text="@string/txt_btn_registers" />

        <Button
            android:id="@+id/botao_filtro_em_uso"
            style="@style/Botao.item.lista"
            android:layout_width="@dimen/dimen_large_120"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_small_2"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_small_12_txt"
            tools:text="@string/txt_btn_in_use" />

        <Button
            android:id="@+id/botao_filtro_ociosas"
            style="@style/Botao.item.lista"
            android:layout_width="@dimen/dimen_large_120"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_small_2"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_small_12_txt"
            tools:text="@string/txt_btn_idle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>