<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Botao.Branco" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/readex_pro_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:minHeight">55dp</item>
    </style>

    <style name="Botao.Borda" parent="ThemeOverlay.AppCompat">

    </style>

    <style name="Botao.Azul" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/blue_secundary</item>
        <item name="fontFamily">@font/readex_pro_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/dimen_small</item>

    </style>

    <style name="ButtonBlue" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">@dimen/dimen_large</item>
        <item name="cornerRadius">@dimen/dimen_small</item>
    </style>

    <style name="Botao.com.borda" parent="Theme.MaterialComponents">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/dimen_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_secundary</item>
        <item name="strokeWidth">@dimen/m3_btn_stroke_size</item>
        <item name="iconTint">@color/blue_secundary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconSize">@dimen/dimen_extra_large</item>
        <item name="cornerRadius">@dimen/dimen_extra_large</item>
        <item name="colorOutline">@color/black</item>
    </style>

    <style name="Item.list" parent="Theme.MaterialComponents">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/dimen_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_secundary</item>
        <item name="strokeWidth">@dimen/m3_btn_stroke_size</item>
        <item name="iconTint">@color/blue_secundary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconSize">@dimen/dimen_extra_y_large</item>
        <item name="cornerRadius">@dimen/dimen_large</item>
        <item name="colorOutline">@color/black</item>
        <item name="android:padding">@dimen/dimen_small</item>
        <item name="paddingStart">@dimen/dimen_medium</item>
    </style>

    <style name="Botao.item.lista" parent="Theme.MaterialComponents">
        <item name="backgroundTint">@color/blue_secundary</item>
        <item name="android:textSize">@dimen/dimen_medium_txt</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/blue_secundary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconSize">@dimen/dimen_extra_large</item>
        <item name="cornerRadius">@dimen/dimen_extra_large</item>
    </style>

    <style name="Switch" parent="Theme.MaterialComponents">

        <item name="colorOnSurface">@color/blue_secundary</item>
        <item name="colorSecondary">@color/blue_secundary</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Botao.menu.lateral" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_large</item>
    </style>

    <style name="ThemeOverlay.NavigationView" parent="">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>
</resources>