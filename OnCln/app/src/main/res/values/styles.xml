<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Botao.Branco" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/readex_pro_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/cor_titulos</item>
        <item name="android:minHeight">55dp</item>
    </style>

    <style name="Botao.Azul" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/cor_barra_e_texto</item>
        <item name="fontFamily">@font/readex_pro_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Botao.menu.lateral" parent="Widget.MaterialComponents.Button.Icon">
        <item name="backgroundTint">#B3FFFFFF</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconPadding">@dimen/dimen_large</item>
        <item name="iconSize">@dimen/dimen_large</item>
        <item name="cornerRadius">@dimen/dimen_small</item>

    </style>
</resources>