<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Botao.Branco" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/readex_pro_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/cor_titulos</item>
        <item name="android:minHeight">55dp</item>
    </style>

    <style name="Botao.Azul" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@color/cor_barra_e_texto</item>
        <item name="fontFamily">@font/readex_pro_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Switch" parent="Theme.MaterialComponents">

        <item name="colorOnSurface">@color/cor_barra_e_texto</item>
        <item name="colorSecondary">@color/cor_barra_e_texto</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>